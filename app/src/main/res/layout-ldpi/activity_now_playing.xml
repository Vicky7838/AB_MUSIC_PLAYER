<?xml version="1.0" encoding="utf-8"?>

<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:theme="@style/AppTheme.AppBarOverlay"
    android:background="@color/colorBlack">

    <android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.music.player.bhandari.m.activity.L"
        android:id="@+id/root_view_test"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="false">
            <!-- full screen image view -->
            <ImageView
                android:id="@+id/full_screen_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/secondary_image_gradient"/>

        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- toolbar -->
            <android.support.v7.widget.Toolbar
                android:fitsSystemWindows="true"
                android:minHeight="@dimen/action_bar_size_small"
                app:contentInsetStartWithNavigation="0dp"
                android:id="@+id/toolbar_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

            <!-- rest of stuff according to weights -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_weight="5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <com.sackcentury.shinebuttonlib.ShineButton
                        android:id="@+id/shineButton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_margin="32dp"
                        android:clickable="false"
                        android:src="@android:color/darker_gray"
                        app:allow_random_color="true"
                        app:big_shine_color="#FF6666"
                        app:btn_color="@color/colorTransparent"
                        app:btn_fill_color="@color/colorTransparent"
                        app:click_animation_duration="200"
                        app:enable_flashing="true"
                        app:shine_animation_duration="1500"
                        app:shine_turn_angle="10"
                        app:siShape="@raw/heart"
                        app:small_shine_color="#CC9999"
                        app:small_shine_offset_angle="20" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/view_pager_now_playing"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>


                <LinearLayout
                    android:layout_weight="1.5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/colorTransparent"
                    android:orientation="vertical"
                    android:layout_below="@+id/toolbar"
                    android:paddingLeft="@dimen/np_control_pan_margin_small"
                    android:paddingRight="@dimen/np_control_pan_margin_small"
                    android:paddingBottom="@dimen/np_control_pan_margin_small"
                    android:weightSum="8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/np_control_pan_seekbar_padd_small"
                        android:paddingRight="@dimen/np_control_pan_seekbar_padd_small">

                        <TextView
                            android:layout_width="@dimen/np_control_pan_start_stop_time_small"
                            android:layout_height="match_parent"
                            android:text="00:00"
                            android:maxLines="1"
                            android:id="@+id/startTIme"
                            android:gravity="center" />

                        <SeekBar
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/seekBar_track_progress"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/np_control_pan_seekbar_padd_top_bottom_small"
                            android:paddingBottom="@dimen/np_control_pan_seekbar_padd_top_bottom_small"/>

                        <TextView
                            android:layout_width="@dimen/np_control_pan_start_stop_time_small"
                            android:layout_height="match_parent"
                            android:maxLines="1"
                            android:text="00:00"
                            android:id="@+id/endTime"
                            android:gravity="center" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/np_control_pan_button_dimen_small"
                        android:orientation="horizontal"
                        android:layout_weight="6"
                        >

                        <ImageView
                            android:id="@+id/shuffle"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_shuffle_black_24dp"
                            android:layout_gravity="center_vertical"
                            android:padding="4dp"
                            />

                        <ImageView
                            android:id="@+id/previous"
                            android:layout_weight="1"
                            android:padding="3dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_skip_previous_black_24dp"
                            android:layout_gravity="center_vertical"
                            />

                        <ImageView
                            android:id="@+id/play_pause"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_play_arrow_black_24dp"
                            android:scaleType="fitCenter"
                            android:layout_gravity="center_vertical"
                            />

                        <ImageView
                            android:id="@+id/next"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:padding="3dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_skip_next_black_24dp"
                            android:layout_gravity="center_vertical"/>

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_gravity="center_vertical"
                            >

                            <ImageView
                                android:id="@+id/repeat"
                                android:padding="4dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_cached_black_24dp"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/text_in_repeat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center" />
                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginRight="25dp"
                        android:layout_marginLeft="25dp"
                        >

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_volume_mute_black_24dp"
                            android:contentDescription="volume_down" />

                        <SeekBar
                            android:layout_weight="4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/seekBar_volume"
                            android:paddingTop="@dimen/np_control_pan_seekbar_padd_top_bottom_small"
                            android:paddingBottom="@dimen/np_control_pan_seekbar_padd_top_bottom_small"/>

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_volume_up_black_24dp"
                            android:contentDescription="volume_up" />

                    </LinearLayout>

                </LinearLayout>     <!-- control panel 3-->

            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

    <RelativeLayout
        android:id="@+id/root_view_current_playlist"
        android:gravity="center|top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/play_queue_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/handle_current_queue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_drag_handle_black_24dp"
                android:background="@color/colorBlack"
                />

            <TextView
                android:id="@+id/current_track_list_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_size_small"
                android:textColor="@color/colorwhite"
                android:gravity="center"
                android:textSize="@dimen/np_play_queu"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewForCurrentTracklist"
            android:layout_below="@+id/play_queue_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            />


    </RelativeLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>
